<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Forms;assembly=SkiaSharp.Views.Forms"
             xmlns:local="clr-namespace:GuessGame"
             x:Class="GuessGame.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" x:Name="GridCanvas" WidthRequest="100" HeightRequest="100" BackgroundColor="WhiteSmoke">
            <skia:SKCanvasView x:Name="CanvasView" WidthRequest="100" HeightRequest="100" PaintSurface="OnPainting" EnableTouchEvents="True" Touch="OnTouch" />
        </Grid>
        <Image Grid.Row="1" x:Name="ImageDim" WidthRequest="100" HeightRequest="100" />
        <StackLayout Grid.RowSpan="2" HorizontalOptions="End" Orientation="Horizontal" VerticalOptions="End">
            
            <Button Text="Cleane" Clicked="Cleane_Click"  />
            <Button Text="Save" Clicked="Save_Click"/>
        </StackLayout>

    </Grid>

</ContentPage>
